{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022", // Changed to CommonJS for Node.js compatibility
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "." // Specifies the root directory of input files
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"] // Exclude 'dist' to avoid compiling files in the output directory
}
